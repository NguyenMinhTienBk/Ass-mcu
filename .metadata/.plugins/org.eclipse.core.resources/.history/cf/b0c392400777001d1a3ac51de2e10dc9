#include "pedestrian.h"


// 0-1 Green
int counter_Pedes_On = 0;
void Buzzer_On(){
	for (int i = 0; i < 255; i++ ){
		if (timer6_flag == 1){
			i += 255 / (timegreen + timeyellow);
			if (i > 255) i = 255;
			__HAL_TIM_SetCompare(&htim3,TIM_CHANNEL_1,100);
			setTimer6(1000);
		}
	}
}
void pedestrian_cramble(){
	if (isButtonflag(butp)){
		 counter_Pedes_On = 3 * Ncycle_Pe_off;
//		for (int i = 0; i < Ncycle_Pe_off * 3; i++ ){
//			switch (status_ver){
//			case AUTO_RED:
//				SetPedesGreen();
//				break;
//			case AUTO_GREEN:
//				SetPedesRed();
//				break;
//			case AUTO_YELLOW:
//				SetPedesRed();
//			default:
//				break;
//			}
//		}
		while(1){
			if (timer1_flag == 1){
				switch (status_ver){
				case AUTO_RED:
					SetPedesGreen();
					break;
				case AUTO_GREEN:
					SetPedesRed();
					Buzzer_On();
					break;
				case AUTO_YELLOW:
					SetPedesRed();
				default:
					break;
				}
				counter_Pedes_On--;
			}
			if (counter_Pedes_On < 0){
				SetPedesOff();
			}
		}
//		if (status_ver == AUTO_GREEN || status_ver == AUTO_YELLOW){
//			SetPedesRed();
//		} else if (status_ver == AUTO_RED) {
//			SetPedesGreen();
//		}

	}
}
